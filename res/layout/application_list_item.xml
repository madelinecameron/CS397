<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="1dp"
    android:layout_marginTop="1dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/applicationListViewImage"
        android:layout_width="32dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="false"
        android:layout_centerInParent="false"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/appIcon"
        android:src="@drawable/icon" />

    <View
        android:id="@+id/colorView"
        android:layout_width="5dp"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/applicationListViewImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/backgroundLight"
        android:paddingBottom="1dp"
        android:paddingTop="1dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/applicationListViewImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/applicationListViewImage"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/applicationListViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/textLight" />

        <TextView
            android:id="@+id/applicationListViewThreatLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/textLight" />

    </LinearLayout>

    <ImageView
        android:id="@+id/applicationListViewCameraIcon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignLeft="@+id/applicationListViewImage"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/cameraIcon"
        android:src="@android:drawable/ic_menu_camera"
        android:textColor="@color/textLight" />

</RelativeLayout>